<% layout('layout/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/edit/<%=_id%>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="title"
          value="<%=title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="location"
          value="<%=location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Add Images</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="price"
            value="<%=price %>"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="description"
        >
<%= description%></textarea
        >
      </div>
      <div class="mb-3">
        <% image.forEach((img,i)=>{ %>
        <img src= <%=img.url%> class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input type="checkbox" name="deletedItem[]" id="<%= i%>" value="<%=img.filename%>">
          <label for="<%= i%>"> Delete??? </label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds/detail/<%=_id%>">Back To Campground</a>
  </div>
</div>
